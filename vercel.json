{
  "version": 2,
  "installCommand": "cd frontend && rm -rf node_modules && npm ci",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/src/app.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/v1/(.*)",
      "destination": "/backend/src/app.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/app.js"
    },
    {
      "source": "/health",
      "destination": "/backend/src/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}
